{
    "version": "0.2.0",
    "configurations": [
       {
            "name": "Perl-Debug",
            "type": "perl",
            "request": "launch",
            "exec": "perl",
            "root": "${fileDirname}",
            "program": "${file}",
            "inc": [],
            "stopOnEntry": true
        },    
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
    ]
}