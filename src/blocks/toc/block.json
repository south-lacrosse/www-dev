{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "semla/toc",
	"version": "1.0.0",
	"title": "Table of Contents",
	"category": "theme",
	"icon": "list-view",
	"description": "Create a table of contents from headings.",
	"attributes": {
		"title": {
			"type": "string",
			"source": "text",
			"selector": "h2",
			"default": "Contents"
		},
		"toc": {
			"type": "string",
			"source": "html",
			"selector": "nav>ul",
			"default": ""
		},
		"floatRight": {
			"type": "boolean",
			"default": true
		}
	},
	"example": {
		"attributes": {
			"title": "Contents"
		}
	},
	"supports": {
		"html": false,
		"multiple": false,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js"
}
