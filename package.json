{
	"name": "south-lacrosse-www",
	"version": "1.0.0",
	"description": "SEMLA WordPress Website",
	"author": "SEMLA",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/south-lacrosse/www-dev.git"
	},
	"scripts": {
		"build:blocks": "cross-replace wp-scripts build --config=webpack-full.config.js --webpack-src-dir=src/blocks --blocks-manifest --output-path=$SEMLA_WWW/wp-content/plugins/semla/blocks",
		"check-engines": "wp-scripts check-engines",
		"format:blocks": "wp-scripts format ./src/blocks",
		"lint:css": "wp-scripts lint-style ./src/blocks/**/*{.css,.scss}",
		"lint:js": "wp-scripts lint-js ./src/blocks",
		"lint:scripts": "eslint ./src/scripts/*.mjs",
		"packages-update": "wp-scripts packages-update",
		"start": "cross-replace wp-scripts start --webpack-src-dir=src/blocks/$SEMLA_BLOCK --output-path=$SEMLA_WWW/wp-content/plugins/semla/blocks/$SEMLA_BLOCK",
		"start-all": "cross-replace wp-scripts start --config=webpack-full.config.js --webpack-src-dir=src/blocks --blocks-manifest --output-path=$SEMLA_WWW/wp-content/plugins/semla/blocks",
		"build:blocks-map-dialog": "node ./src/scripts/inline-map-dialog.mjs",
		"format:non-blocks": "prettier -w . !src/blocks/**",
		"format:wp": "cross-replace prettier -w $SEMLA_WWW/ --ignore-path $SEMLA_WWW/.prettierignore",
		"in-head-js": "uglifyjs src/js/in-head.js -c arrows=false -m -o src/js/in-head.min.js",
		"lint:plugin": "cross-replace eslint $SEMLA_WWW/wp-content/plugins/semla/js --resolve-plugins-relative-to .",
		"lint:theme": "cross-replace eslint $SEMLA_WWW/wp-content/themes/lax --resolve-plugins-relative-to .",
		"js:cal": "cross-replace uglifyjs $SEMLA_WWW/wp-content/plugins/semla/js/cal.js -c arrows=false -m -o $SEMLA_WWW/wp-content/plugins/semla/js/cal.min.js",
		"js:colhover": "cross-replace uglifyjs $SEMLA_WWW/wp-content/plugins/semla/js/colhover.js -c arrows=false -m -o $SEMLA_WWW/wp-content/plugins/semla/js/colhover.min.js",
		"js:inline-edit": "cross-replace uglifyjs $SEMLA_WWW/wp-content/plugins/semla/js/inline-edit.js -c -m -o $SEMLA_WWW/wp-content/plugins/semla/js/inline-edit.min.js",
		"js:embed": "cross-replace uglifyjs $SEMLA_WWW/wp-content/plugins/semla/core/Rest/views/embed.js -c arrows=false -m reserved=[c,i,s,t] -o $SEMLA_WWW/wp-content/plugins/semla/core/Rest/views/embed.min.js",
		"js:map": "cross-replace uglifyjs $SEMLA_WWW/wp-content/plugins/semla/js/map.js -c -m -o $SEMLA_WWW/wp-content/plugins/semla/js/map.min.js",
		"js:main": "cross-replace uglifyjs $SEMLA_WWW/wp-content/themes/lax/main.js -c arrows=false -m -o $SEMLA_WWW/wp-content/themes/lax/main.min.js",
		"css:plugin": "cross-replace postcss \"$SEMLA_WWW/wp-content/plugins/semla/css/!(*.min)*.css\" --no-map -d $SEMLA_WWW/wp-content/plugins/semla/css --ext min.css -u postcss-csso autoprefixer",
		"theme-css:editor-style": "node ./src/scripts/editor-style.mjs",
		"theme-css:minify": "cross-replace postcss $SEMLA_WWW/wp-content/themes/lax/!(*.min)*.css --no-map -d $SEMLA_WWW/wp-content/themes/lax --ext min.css -u postcss-csso autoprefixer",
		"css:theme": "run-s theme-css:editor-style theme-css:minify",
		"build:wp": "run-s js:* css:*",
		"svgo:theme": "cross-replace svgo -f $SEMLA_WWW/wp-content/themes/lax/img",
		"svgo:plugin": "cross-replace svgo -f $SEMLA_WWW/wp-content/plugins/semla/img",
		"glightbox": "node ./src/scripts/glightbox-copy.mjs",
		"js-glightbox": "node ./src/scripts/glightbox-bundle.mjs",
		"build:glightbox": "run-s glightbox js-glightbox",
		"lint": "run-s lint:*",
		"build": "run-s build:*"
	},
	"devDependencies": {
		"@wordpress/icons": "^11.6.0",
		"@wordpress/scripts": "^31.4.0",
		"autoprefixer": "^10.4.24",
		"cross-replace": "^0.2.0",
		"glightbox": "^3.3.1",
		"inline-source": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-csso": "^6.0.1",
		"svgo": "^4.0.0",
		"uglify-js": "^3.19.3"
	}
}
