{
	"name": "south-lacrosse-wwww",
	"version": "1.0.0",
	"description": "SEMLA WordPress Website",
	"author": "SEMLA",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/south-lacrosse/www-dev.git"
	},
	"scripts": {
		"build:blocks": "cross-env-shell wp-scripts build --webpack-src-dir=src/blocks --output-path=$npm_config_www/wp-content/plugins/semla/blocks",
		"build:blocks-core": "cross-env-shell wp-scripts build src/blocks/core/core.js --webpack-src-dir=src/blocks/core --output-path=$npm_config_www/wp-content/plugins/semla/blocks-core",
		"check-engines": "wp-scripts check-engines",
		"format:blocks": "wp-scripts format ./src/blocks",
		"lint:css": "wp-scripts lint-style ./src/blocks/**/*{.css,.scss}",
		"lint:js": "wp-scripts lint-js ./src/blocks",
		"packages-update": "wp-scripts packages-update",
		"start": "cross-env-shell wp-scripts start --webpack-src-dir=src/blocks --output-path=$npm_config_www/wp-content/plugins/semla/blocks",
		"start-hot": "cross-env-shell wp-scripts start --hot --allowed-hosts dev.southlacrosse.org.uk --webpack-src-dir=src/blocks --output-path=$npm_config_www/wp-content/plugins/semla/blocks",
		"start-core": "cross-env-shell wp-scripts start src/blocks/core/core.js --webpack-src-dir=src/blocks/core --output-path=$npm_config_www/wp-content/plugins/semla/blocks-core",
		"start-hot-core": "cross-env-shell wp-scripts start --hot --allowed-hosts dev.southlacrosse.org.uk src/blocks/core/core.js --webpack-src-dir=src/blocks/core --output-path=$npm_config_www/wp-content/plugins/semla/blocks-core",
		"build:blocks-map-dialog": "cross-env-shell inline-source --compress --root src/blocks/map/ src/blocks/map/map-dialog.html $npm_config_www/wp-content/plugins/semla/modal/map-dialog.html",
		"format:non-blocks": "prettier -w . !src/blocks/**",
		"format:wp": "cross-env-shell prettier -w $npm_config_www/ --ignore-path $npm_config_www/.prettierignore",
		"in-head-js": "uglifyjs src/js/in-head.js -c -m -o src/js/in-head.min.js",
		"lint:wp": "cross-env-shell eslint $npm_config_www/wp-content/plugins/semla/js --resolve-plugins-relative-to .",
		"js:cal": "cross-env-shell uglifyjs $npm_config_www/wp-content/plugins/semla/js/cal.js -c -m -o $npm_config_www/wp-content/plugins/semla/js/cal.min.js",
		"js:colhover": "cross-env-shell uglifyjs $npm_config_www/wp-content/plugins/semla/js/colhover.js -c -m -o $npm_config_www/wp-content/plugins/semla/js/colhover.min.js",
		"js:embed": "cross-env-shell uglifyjs $npm_config_www/wp-content/plugins/semla/core/Rest/views/embed.js -c -m reserved=[c,i,s,t] -o $npm_config_www/wp-content/plugins/semla/core/Rest/views/embed.min.js",
		"js:map": "cross-env-shell uglifyjs $npm_config_www/wp-content/plugins/semla/js/map.js -c -m -o $npm_config_www/wp-content/plugins/semla/js/map.min.js",
		"js:main": "cross-env-shell uglifyjs $npm_config_www/wp-content/themes/lax/main.js -c -m -o $npm_config_www/wp-content/themes/lax/main.min.js",
		"css:plugin": "cross-env-shell postcss \"$npm_config_www/wp-content/plugins/semla/css/!(*.min)*.css\" --no-map -d $npm_config_www/wp-content/plugins/semla/css --ext min.css -u postcss-csso autoprefixer",
		"theme-css:editor-style": "cross-env-shell node ./src/scripts/editor-style.mjs $npm_config_www/wp-content/themes/lax",
		"theme-css:minify": "cross-env-shell postcss $npm_config_www/wp-content/themes/lax/!(*.min)*.css --no-map -d $npm_config_www/wp-content/themes/lax --ext min.css -u postcss-csso autoprefixer",
		"css:theme": "run-s theme-css:editor-style theme-css:minify",
		"build:wp": "run-s js:* css:*",
		"svgo": "cross-env-shell svgo -f $npm_config_www/wp-content/themes/lax/img",
		"lint": "run-s lint:*",
		"build": "run-s build:*"
	},
	"devDependencies": {
		"@wordpress/icons": "^9.16.0",
		"@wordpress/scripts": "^25.2.0",
		"autoprefixer": "^10.4.13",
		"cross-env": "^7.0.3",
		"inline-source-cli": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-csso": "^6.0.1",
		"svgo": "^3.0.2",
		"uglify-js": "^3.17.4"
	}
}
